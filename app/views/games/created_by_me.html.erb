<div class="page-header">
  <h1>Created By Me Page</h1>
</div>

<div class="col-md-2">
  <%= render "/layouts/sidebar" %>
</div>

<div class="col-md-10">
  <div id="created-div" class="col-md-10">
    <h3>Games I've Created</h3>

    <% @created_games.each do |game| %>
      <div class="game-container col-md-10">
        <p><span class="flag-icon"><%= link_to fa_icon("flag 2x"), game %></span>on <%= formatted_date(game.date) %> at
          <%= formatted_time(game.date) %> to be played at <%= link_to game.golf_course.name, game.golf_course, class: "link-word"%></p>
      </div>
    <% end %>
  </div>
</div>
